{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "checkJs": false,
    "declaration": false,
    "declarationMap": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": false,
    "jsx": "react-jsxdev",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": false,
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "sourceMap": false,
    "target": "ES2017",
    "alwaysStrict": false,
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "types/*", "server.ts", "prerender.cts", "node_modules/vite/types/*"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
